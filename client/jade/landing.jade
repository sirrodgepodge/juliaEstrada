#place-holder.no-show
img#landing-head(style="opacity: 0; z-index:7;", src="#{locals.landing.logoImage}")
#landing(style="transform: translateZ(0)")
  #shading(style="transition: opacity 1s ease-in-out 1.15s; background-color: rgba(16,19,29,0.57); position: absolute; width: 100%; height: 100%;")
  #loader-wrapper
    svg#loader(viewbox='-60 -60 120 120', version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink')
        g.g-circles.g-circles--v4
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
          g.g--circle
            circle.u--circle(r='10', cx='20', cy='20')
  #landing-content(style="visibility: hidden; transition: 1s ease-in-out 1.15s")
    #landing-info
      #tab-1.landing-tab
        .head= locals.landing.tab1.label
        .full
          each line in locals.landing.tab1.content
            |  #{line} #[br] #[br]
      #tab-2.landing-tab
        .head= locals.landing.tab2.label
        .full
          each line in locals.landing.tab2.content
            |  #{line} #[br] #[br]
    #down-anim.scroll-to(data-scroll-to="#videos")
      svg#down-anim-svg(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', viewbox='0 280 612 260', style='enable-background:new 0 280 612 260;', xml:space='preserve')
        polygon(fill="#fff" points='474.1,271.8 471.9,362.9 286.1,532.4 119.3,355.4 117.6,259.1 288.8,441.7')
  img(src="#{locals.landing.init.image}", onload="landing()", style="opacity:0; transition: opacity 1.5s;")#img-init.landing-img
  #img-tab-2.landing-img(style="background: url(#{locals.landing.tab2.image}) no-repeat 50% 0% /cover; opacity:0;")
